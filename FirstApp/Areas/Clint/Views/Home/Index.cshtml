@model IEnumerable<FirstApp.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-4">

    @foreach (var item in @Model)
    {
        <div class="card" style="width: 18rem;">
            <img src="@item.ImageURL" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-title">@item.price</p>
                <a asp-action="Details" asp-controller="Home" asp-route-id="@item.ID" class="btn btn-primary">Go Product Details</a>
            </div>
        </div>
    }

</div>
