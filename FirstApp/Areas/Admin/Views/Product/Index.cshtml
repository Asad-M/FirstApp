@model FirstApp.Models.ProductVM
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Product</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Product">Create New Product</a>
        </div>
    </div>
</div>
@if (Model.products != null)
{

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Discription</th>
                <th scope="col">ImageURL</th>
                <th scope="col">Category ID</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.products)
            {
                <tr class="table-active">
                    <th scope="row">@item.ID</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.ImageURL</td>
                    <td>@item.CategoryID</td>
                    <td>
                        <a asp-action="CreateUpdate" asp-controller="Product" asp-route-id="@item.ID">Edit</a>
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="bg-success">Not Category Found</p>
}