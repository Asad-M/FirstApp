@model Product
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">Product Delete</h2>
        </div>
        <div class="row mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" value="@Model.Name" disabled/>
        </div>
        <div class="row mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" disabled>@Model.Description</textarea>
        </div>
        <div class="row mb-3">
            <label asp-for="price"></label>
            <input asp-for="price" class="form-control" value="@Model.price" disabled/>
        </div>
        <div class="row mb-3">
            <label asp-for="ImageURL"></label>
            <input asp-for="ImageURL" class="form-control" value="@Model.ImageURL" disabled/>
        </div>
        <button class="btn btn-danger" type="submit">Delete</button>
    </div>
</form>