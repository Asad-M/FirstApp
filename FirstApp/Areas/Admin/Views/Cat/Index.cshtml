@model FirstApp.Models.CategoryVM
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Categories</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Cat">Create New Category</a>
        </div>
    </div>
</div>
@if (Model.categories != null)
{

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Create DateTime</th>
                <th scope="col">Name</th>
                <th scope="col">Display Order</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.categories)
            {
                <tr class="table-active">
                    <th scope="row">@item.Id</th>
                    <td>@item.CreatedDateTime</td>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <a asp-action="CreateUpdate" asp-controller="Cat" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" asp-controller="Cat" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="bg-success">Not Category Found</p>
}